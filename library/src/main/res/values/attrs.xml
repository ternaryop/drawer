<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TernaryOpDrawer">
        <!-- ============ -->
        <!-- Drawer style -->
        <!-- ============ -->
        <eat-comment/>

        <!-- Default colors of drawer -->
        <attr name="topColorDrawerRowBackgroundSelector" format="color"/>
        <attr name="topColorDrawerRowTextSelector" format="color"/>
        <attr name="topColorDrawerCounterBackgroundSelector" format="color"/>
        <attr name="topColorDrawerCounterTextSelector" format="color"/>

        <attr name="topColorDrawerBackgroundDivider" format="color"/>
        <attr name="topColorDrawerBackgroundFrame" format="color"/>

        <!-- Toolbar popup menu -->
        <attr name="topDrawerToolbarPopupTheme" format="reference"/>

    </declare-styleable>

    <declare-styleable name="com.ternaryop.widget.ClickableTextView">
        <attr name="clickedColor" format="color"/>
        <attr name="clickedBackground" format="color"/>
    </declare-styleable>

    <declare-styleable name="com.ternaryop.widget.CheckableImageView">
        <attr name="checkedColorFilter" format="color"/>
    </declare-styleable>

    <declare-styleable name="com.ternaryop.widget.WaitingResultSwipeRefreshLayout">
        <attr name="colorScheme" format="reference"/>
    </declare-styleable>
</resources>