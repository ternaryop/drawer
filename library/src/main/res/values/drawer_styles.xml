<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Drawer" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DrawerHeaderListItem" parent="Drawer">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerListItem" parent="Drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?topColorDrawerRowBackgroundSelector</item>
        <item name="android:textColor">?topColorDrawerRowTextSelector</item>
    </style>

    <style name="DrawerCounterItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">?topColorDrawerCounterBackgroundSelector</item>
        <item name="android:textColor">?topColorDrawerCounterTextSelector</item>
    </style>

    <style name="DrawerDividerListItem" parent="Drawer">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?topColorDrawerBackgroundDivider</item>
        <item name="android:layout_height">1dp</item>
    </style>

</resources>